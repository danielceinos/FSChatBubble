<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fireshield.fschatbubbleexample.MainActivity"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:orientation="vertical"
      >

    <com.fireshield.fschatbubble.FSChatBubble
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        app:bubbleBackground="rightTop"
        app:bubbleColor="#ea80fc"
        app:text="HOLA CARACOLA"
        />

    <com.fireshield.fschatbubble.FSChatBubble
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        app:bubbleBackground="rightMiddle"
        app:bubbleColor="#ea80fc"
        app:text="HOLA CARACOLAOLA CARACOLA HOLA CARACOLAOLA CARACOLA HOLA CARACOLA HOLA CARACOLAOLA CARACOLA HOLA CARACOLA HOLA CARACOLAOLA CARACOLA HOLA CARACOLA HOLA CARACOLAOLA CARACOLA HOLA CARACOLA "
        />

    <com.fireshield.fschatbubble.FSChatBubble
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        app:bubbleBackground="rightBottom"
        app:bubbleColor="#ea80fc"
        app:text="HOLA"
        />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="8dp"
      android:orientation="vertical"
      >

    <com.fireshield.fschatbubble.FSChatBubble
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        app:bubbleBackground="leftTop"
        app:bubbleColor="#e040fb"
        app:text="HOLA CARACOLA"
        />

    <com.fireshield.fschatbubble.FSChatBubble
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        app:bubbleBackground="leftMiddle"
        app:bubbleColor="#e040fb"
        app:text="HOLA \nHOLA \nHOLA \nHOLA \nHOLA \nHOLA"
        />

    <com.fireshield.fschatbubble.FSChatBubble
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        app:bubbleBackground="leftBottom"
        app:bubbleColor="#e040fb"
        app:text="HOLA"
        />
  </LinearLayout>

</LinearLayout>
