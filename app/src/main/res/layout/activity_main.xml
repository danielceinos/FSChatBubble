<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fireshield.fschatbubbleexample.MainActivity"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginTop="8dp"
      android:orientation="vertical"
      >

    <com.fireshield.fschatbubble.FSChatBubble
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        app:background="@drawable/bubble_top_right"
        app:text="HOLA CARACOLA"
        />

    <com.fireshield.fschatbubble.FSChatBubble
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        app:background="@drawable/bubble_middle_right"
        app:text="HOLA CARACOLAOLA CARACOLA HOLA CARACOLAOLA CARACOLA HOLA CARACOLA HOLA CARACOLAOLA CARACOLA HOLA CARACOLA HOLA CARACOLAOLA CARACOLA HOLA CARACOLA HOLA CARACOLAOLA CARACOLA HOLA CARACOLA "
        />

    <com.fireshield.fschatbubble.FSChatBubble
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        app:background="@drawable/bubble_down_right"
        app:text="HOLA"
        />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginTop="8dp"
      android:orientation="vertical"
      >

    <com.fireshield.fschatbubble.FSChatBubble
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        app:background="@drawable/bubble_top_right"
        app:text="HOLA CARACOLA"
        />

    <com.fireshield.fschatbubble.FSChatBubble
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        app:background="@drawable/bubble_middle_right"
        app:text="HOLA CARACOLAOLA CARACOLA HOLA CARACOLAOLA CARACOLA HOLA CARACOLA HOLA CARACOLAOLA CARACOLA HOLA CARACOLA HOLA CARACOLAOLA CARACOLA HOLA CARACOLA HOLA CARACOLAOLA CARACOLA HOLA CARACOLA "
        />

    <com.fireshield.fschatbubble.FSChatBubble
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        app:background="@drawable/bubble_down_left"
        app:text="HOLA"
        />
  </LinearLayout>

</LinearLayout>
