<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="FSChatBubble">
    <attr format="dimension" name="textSize" />
    <attr format="string" name="text" />
    <attr format="color" name="bubbleColor" />
    <attr format="color" name="textColor" />
    <attr format="reference" name="background" />
    <attr name="bubbleBackground">
      <flag name="rightTop" value="0" />
      <flag name="rightMiddle" value="1" />
      <flag name="rightBottom" value="2" />
      <flag name="leftTop" value="3" />
      <flag name="leftMiddle" value="4" />
      <flag name="leftBottom" value="5" />
    </attr>
  </declare-styleable>
</resources>